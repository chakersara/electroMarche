								<th class="text-center">UNIT PRICE</th>
								<th class="text-center">QUANTITY</th>
								<th class="text-center">TOTAL</th> 
								<th class="text-center"><i class="ti-trash remove-icon"></i></th>
							</tr>
						</thead>
						<tbody>
						{% if cart|length==0 %}
							<tr>
								<td class="text-center " colspan="6"><h5>No items available.</h5></td>
							</tr>
							{% else %}
								{% for prod in cart %}
									<tr>
										<td class="image text-center"  data-title="No"><img style="width: 200px" src="{{ prod.product.imageURLs }}" alt="#"></td>
										<td class="product-des" data-title="Description">
											<p class="product-name"><a href="#">{{  prod.product.name}}</a></p>
											<p class="product-des mt-1"style="font-size: 11px">{{ prod.product.merchant }}</p>
										</td>
										<td class="price" data-title="Price"><span>${{ prod.product.amountMin }}</span></td>
										<td class="qty" data-title="Qty"><!-- Input Order -->
											<div class="input-group">
												<div class="button minus">
													<button onclick="window.location.href='/p_cart/dec/{{ prod.product.id }}'" type="button" class="btn btn-primary btn-number"
															{% if prod.quantity==1 %}
																disabled="disabled"
															{% endif %}
															data-type="minus" data-field="{{ prod.quantity }}">
														<i class="ti-minus"></i>
													</button>
												</div>
												<input type="text" name="{{ prod.quantity }}"  class="input-number"  data-min="1" data-max="100" value="{{ prod.quantity}}" style="background-color: white" disabled>
												<div class="button plus">

													<button onclick="window.location.href='/p_cart/add/{{ prod.product.id }}'" type="button" class="btn btn-primary btn-number" data-type="plus" data-field="{{ prod.quantity }}">
														<i class="ti-plus"></i>
													</button>


												</div>
											</div>
											<!--/ End Input Order -->
										</td>
										<td class="total-amount" data-title="Total"><span>${{ prod.quantity*prod.product.amountMin }}</span></td>
										<td class="action" data-title="Remove"><a href="/p_cart/remove/{{ prod.product.id }}"><i class="ti-trash remove-icon"></i></a></td>
									</tr>
								{% endfor %}
						{% endif %}

						</tbody>
					</table>
					<!--/ End Shopping Summery -->
